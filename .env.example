# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# =============================================================================

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_...

# App URLs (IMPORTANT: Update these for production!)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WEB_URL=http://localhost:3000

# AI Document Verification (Anthropic Claude)
ANTHROPIC_API_KEY=sk-ant-...

# =============================================================================
# EMAIL SERVICE (AWS SES) - Required for sending invitations
# =============================================================================

AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=ap-southeast-2
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# Note: The sender email (AWS_SES_FROM_EMAIL) must be verified in AWS SES
# For production, you need to move out of SES sandbox mode

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Clerk Webhooks (for user sync)
CLERK_WEBHOOK_SECRET=whsec_...

# File Storage (Vercel Blob) - for document uploads
BLOB_READ_WRITE_TOKEN=...

# Stripe (for SMS credit purchases - future)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Tall Bob SMS (two-way SMS - future)
TALLBOB_API_KEY=...
TALLBOB_API_URL=https://...
TALLBOB_WEBHOOK_SECRET=...

# Xero Integration (accounting sync - future)
XERO_CLIENT_ID=...
XERO_CLIENT_SECRET=...
XERO_REDIRECT_URI=https://yourdomain.com/api/xero/callback

# =============================================================================
# FEATURE FLAGS (optional)
# =============================================================================

ENABLE_SUBSCRIPTIONS=false
ENABLE_XERO=true
ENABLE_TWO_WAY_SMS=true
